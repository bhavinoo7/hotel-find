<% layout("/layouts/boilerplate") -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h1>Edit</h1>
                <form action="/listings/<%=listinge.id%>?_method=PATCH" method="post" novalidate
                    class="needs-validation" enctype="multipart/form-data">
                    <div class="mt-3">
                        <label for="title" class="form-label">title</label>
                        <textarea name="listing[title]" class="form-control" required><%= listinge.title %> </textarea>
                    </div>
                    <div class="mt-3">
                        <label for="description" class="form-label">description</label>
                        <textarea name="listing[description]" class="form-control"
                            required><%= listinge.description %></textarea>
                    </div>

                    <div class="mt-3">
                        <div class="mt-3">
                            <img src=<%=originalimageurl %> alt="not found" width="300" height="200">
                        </div>
                        <label for="image" class="form-label">Image</label>
                        <input name="listing[image]" class="form-control" type="file">
                    </div>
                    <div class="mt-3">
                        <label for="price" class="form-label">price</label>
                        <input name="listing[price]" value=<%=listinge.price %> class="form-control" type="number"
                        required >
                    </div>
                    <div class="row">
                        <div class="mt-3 col-4">
                            <label for="location" class="form-label">location
                            </label>
                            <input name="listing[location]" value=<%=listinge.location %> class="form-control"
                            type="text" required>
                        </div>
                        <div class="mt-3 col-8">
                            <label for="country" class="form-label">country</label>
                            <textarea name="listing[country]" class="form-control"
                                required><%= listinge.country %></textarea>
                        </div>
                    </div>
                    <button class="btn btn-dark mt-3">submit</button>
                </form>
            </div>
        </div>

    </body>